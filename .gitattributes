* text=auto

# Dotnet
*.cs text diff=csharp
*.sln text eol=crlf
*.csproj text eol=crlf

# Force bash scripts to always use lf line endings
*.sh text eol=lf

# R
*.Rdata binary
*.RData binary
*.rda   binary
*.Rmd text diff=markdown
*.Rd text
*.rdb filter=lfs diff=lfs merge=lfs -text
*.rds filter=lfs diff=lfs merge=lfs -text
*.Rdx filter=lfs diff=lfs merge=lfs -text
*.R text diff=rstats
*.Rproj text

# Jupyter notebook
*.ipynb text

# Web
*.css text diff=css
*.scss text diff=css
*.sass text
*.htm text diff=html
*.html text diff=html
*.md text diff=markdown linguist-detectable

# Data
*.csv eol=crlf filter=lfs diff=lfs merge=lfs
*.xls* filter=lfs diff=lfs merge=lfs
*.hdf5 filter=lfs diff=lfs merge=lfs -text

# Images
*.gif filter=lfs diff=lfs merge=lfs -text
*.ico filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.pdf filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.psd filter=lfs diff=lfs merge=lfs -text
*.webp filter=lfs diff=lfs merge=lfs -text
*.svg text

# Archives
*.7z filter=lfs diff=lfs merge=lfs -text
*.br filter=lfs diff=lfs merge=lfs -text
*.gz filter=lfs diff=lfs merge=lfs -text
*.tar filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text

# Other
*.exe filter=lfs diff=lfs merge=lfs -text
